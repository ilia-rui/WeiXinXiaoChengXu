/* pages/shop/shop.wxss */
page {
  background-color: #f7f7f7;
  height: 100%;
}

.container {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 分类网格 */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 30rpx 0;
  border-bottom: 16rpx solid #f7f7f7;
  color: #333;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 16rpx;
  background-color: #f2f2f2;
  border-radius: 16rpx;
  overflow: hidden;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 轮播图区域 */
.promo-section {
  padding: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
  flex: 1;
  min-height: 0; /* 在flex布局中防止内容溢出，非常重要 */
}

.promo-swiper {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
} 